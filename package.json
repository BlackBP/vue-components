{
  "name": "@blackbp/vue-components",
  "author": "BlackBP <blackbp9@gmail.com>",
  "homepage": "https://github.com/BlackBP/vue-components",
  "repository": {
    "type": "git",
    "url": "https://github.com/BlackBP/vue-components.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "description": "[In developing] UI library based on Vue.js framework",
  "keywords": [
    "vue",
    "ui"
  ],
  "version": "0.10.14",
  "scripts": {
    "serve": "vue-cli-service serve --host=192.168.1.102 src-docs/app.js",
    "serve-local": "vue-cli-service serve --host=localhost src-docs/app.js",
    "build": "rollup -c rollup.config.js",
    "build-css": "node-sass --source-map=true --importer=node_modules/node-sass-package-importer/dist/cli.js src/styles/index.scss dist/css/styles.css",
    "build-css-min": "node-sass --output-style=compressed --importer=node_modules/node-sass-package-importer/dist/cli.js src/styles/index.scss dist/css/styles.min.css",
    "build-docs": "vue-cli-service build src-docs/app.js --dest docs",
    "publish-build": "yarn publish",
    "publish-build beta": "yarn publish --tag beta",
    "version-patch": "yarn version --patch",
    "version-minor": "yarn version --minor",
    "version-major": "yarn version --major"
  },
  "main": "./dist/lib.common.js",
  "module": "./dist/lib.esm.js",
  "source": "./src/index.js",
  "files": [
    "dist",
    "src",
    "*.json",
    "*.js"
  ],
  "dependencies": {
    "@blackbp/vue-components": "beta",
    "@mdi/font": "latest",
    "@mdi/svg": "latest",
    "animated-scroll-to": "^2.0.5",
    "inputmask": "^4.0.9",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "normalize.css": "^8.0.1",
    "shortid": "^2.2.15",
    "vue": "^2.6.10",
    "vue-router": "^3.1.3",
    "vuex": "^3.1.2"
  },
  "peerDependencies": {
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.0.5",
    "@vue/cli-service": "^4.0.5",
    "node-sass": "4.13.0",
    "node-sass-package-importer": "5.3.2",
    "rollup": "1.27.0",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-copy": "3.1.0",
    "rollup-plugin-local-resolve": "1.0.7",
    "rollup-plugin-node-globals": "1.4.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-terser": "5.1.2",
    "rollup-plugin-vue": "5.1.1",
    "sass-loader": "8.0.0",
    "vue-template-compiler": "2.6.10"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
